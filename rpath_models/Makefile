python_files = $(wildcard *.py)

generated_files = constants.py

.PHONY: clean install $(generated_files)

all: $(generated_files) default-all

install: pyfiles-install default-install

clean: default-clean

constants.py:
	echo "# This file is autogenerated in Makefile. Do not edit." > $@
	echo "mintVersion = '$(SHORTVER)'" >> $@
	echo "fullVersion = '$(VERSION)'" >> $@

include ../Make.rules
# vim: set sts=8 sw=8 noexpandtab :
